alias la="clear ; ls -la"
alias nano="sudo nano"
alias gz="gzip -9"
alias s="open -a 'Sublime Text'"
alias w="cd ~/work"
alias c="cd ~/code"

alias mysql="mysql -h 127.0.0.1 -P 3306 -u root -p"
alias mysqladmin="mysqladmin -h 127.0.0.1 -P 3306 -u root -p"
alias mysqldump="mysqldump -h 127.0.0.1 -P 3306 -u root -p"

alias ze="open -a 'Sublime Text' ~/.zshrc"
alias zs="source ~/.zshrc"

